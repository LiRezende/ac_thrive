<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Motivation</th>
      <th>Hobby</th>
      <th>Country</th>
      <th>Culture</th>
      <th>Work</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.motivation %></td>
        <td><%= question.hobby %></td>
        <td><%= question.country %></td>
        <td><%= question.culture %></td>
        <td><%= question.work %></td>
        <td><%= question.person %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path %>
