<p id="notice"><%= notice %></p>

<h1>Class Days</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_days.each do |class_day| %>
      <tr>
        <td><%= class_day.name %></td>
        <td><%= link_to 'Show', class_day %></td>
        <td><%= link_to 'Edit', edit_class_day_path(class_day) %></td>
        <td><%= link_to 'Destroy', class_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Class Day', new_class_day_path %>
