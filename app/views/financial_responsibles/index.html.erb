<p id="notice"><%= notice %></p>

<h1>Financial Responsibles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Cpf</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @financial_responsibles.each do |financial_responsible| %>
      <tr>
        <td><%= financial_responsible.first_name %></td>
        <td><%= financial_responsible.last_name %></td>
        <td><%= financial_responsible.phone %></td>
        <td><%= financial_responsible.email %></td>
        <td><%= financial_responsible.cpf %></td>
        <td><%= financial_responsible.person %></td>
        <td><%= link_to 'Show', financial_responsible %></td>
        <td><%= link_to 'Edit', edit_financial_responsible_path(financial_responsible) %></td>
        <td><%= link_to 'Destroy', financial_responsible, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

