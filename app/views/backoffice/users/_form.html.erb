<% if current_user.has_role?(:Administrador) %>
  <div class="field">
    <p>Selecione o Status:</p>
    <%= f.select(:status_id, Status.all.map{|s| [s.status_name, s.id]}) %>
  </div>
  
  <div class="field">
    <p>Selecione o Perfil:</p>
    <%= f.collection_check_boxes(:role_ids, Role.all, :id, :name) do |b| %>
      <div>
        <%= b.label(class: "check_box") do %>
          <div class="container-flex">
          <div>
          <span class="material-icons-sharp">keyboard_double_arrow_right</span> <%= b.object.name %>
          </div>
          <div>
            <%= b.check_box(class: "check_box", checked: @user.roles.where(id: b.object.id).count > 0) %>
          </div>
          </div>       
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
