<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cnpj</th>
      <th>Legal representative</th>
      <th>Phone number</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.cnpj %></td>
        <td><%= company.legal_representative %></td>
        <td><%= company.phone_number %></td>
        <td><%= company.email %></td>
        <td><%= link_to 'Show', backoffice_company_path(company) %></td>
        <td><%= link_to 'Edit', edit_backoffice_company_path(company) %></td>
        <td><%= link_to 'Destroy', backoffice_company_path(company), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

