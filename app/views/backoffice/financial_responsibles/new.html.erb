<%= form_with(model: [ :backoffice, @user, @financial_responsible ], local: true) do |form| %>

  <div class="field">
    <%= form.label 'Nome' %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label 'Sobrenome' %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label 'Telefone' %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label 'Email' %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label 'CPF' %>
    <%= form.text_field :cpf %>
  </div>

  <div class="actions">
    <%= form.submit 'Salvar' %>
  </div>

<% end %>