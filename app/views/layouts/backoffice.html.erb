<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/stylesheets/stylesheet-dashboard-index.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>Aliança Cultural Dashboard</title>
  </head>
  <body>
    <!-- Theme Toggler -->
    <nav class="right">
      <div class="top">
        <button id="menu-btn">
          <span class="material-icons-sharp">menu</span>
        </button>
        <div class="theme-toggler">
          <span class="material-icons-sharp active">light_mode</span>
          <span class="material-icons-sharp">dark_mode</span>
        </div>
        <div class="profile">
          <div class="info">
            <p>Olá, <b><%= current_user.person.first_name %></b>!</p>
          </div>
        </div>
      </div>
    </nav>
    <!-- End of Theme Toggler -->
    <section class="container">
      <!-- Side Menu -->
      <aside>
        <div class="top">
          <div class="logo">
            <img src="/assets/images/alianca-cultural-simbolo.png" alt="Logo" />
          </div>
        </div>
        <div class="sidebar">
          <a href="/backoffice/home/index">
            <span class="material-icons-sharp">grid_view</span>
            <h3>Início</h3>
          </a>
          <a href="/backoffice/users">
            <span class="material-icons-sharp">group</span>
            <h3>Usuários</h3>
          </a>
          <%= link_to backoffice_idioms_path do %>
            <span class="material-icons-sharp">forum</span>
            <h3>Idiomas</h3>
          <% end %>
          <%= link_to backoffice_idiom_levels_path do %>
            <span class="material-icons-sharp">chat</span>
            <h3>Níveis dos<br>Cursos</h3>
          <% end %>
          <%= link_to backoffice_companies_path do %>
            <span class="material-icons-sharp">store</span>
            <h3>Empresas<br>Parceiras</h3>
          <% end %>
          <%= link_to backoffice_profile_path(current_user) do %>
            <span class="material-icons-sharp">manage_accounts</span>
            <h3>Meu Perfil</h3>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <span class="material-icons-sharp">logout</span>
            <h3>Logout</h3>
          <% end %>
        </div>
      </aside>
      <!-- End of Side Menu -->
      <!-- Main Content -->
      <main>
        <%= yield %>
      </main>
      <!-- End of Main Section -->
    </section>
    <!-- Footer -->
    <footer>
      <div>
        <img src="https://aliancacultural.com/wp-content/uploads/2020/08/ALIANCA-CULTURAL-LOGO-152x152-1.png" />
      </div>
      <div>
        <p>Desenvolvido por</p>
      </div>
    </footer>
    <!-- End of Footer -->
    <script src="/assets/javascripts/dashboard-index.js"></script>
  </body>
</html>