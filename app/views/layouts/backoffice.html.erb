<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/stylesheets/stylesheet-dashboard-index.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp">
    <title>Aliança Cultural Dashboard</title>
</head>
<body>
    <!-- Theme Toggler -->
    <nav class="right">
        <div class="top">
            <button id="menu-btn">
                <span class="material-icons-sharp">menu</span>
            </button>
            <div class="theme-toggler">
                <span class="material-icons-sharp active">light_mode</span>
                <span class="material-icons-sharp">dark_mode</span>
            </div>
            <div class="profile">
                <div class="info">
                    <p>Hey, <b><%= current_user.first_name %></b>!</p>                    
                </div>
            </div>
        </div>
    </nav>
    <!-- End of Theme Toggler -->

    <section class="container">
        <!-- Side Menu -->
        <aside>
            <div class="top"> 
                <div class="logo">
                    <img src="/assets/images/alianca-cultural-simbolo.png" alt="Logo" />
                </div>
            </div>
            <div class="sidebar">
                <a href="#">
                    <span class="material-icons-sharp">grid_view</span>
                    <h3>Dashboard</h3>
                </a>
                <a href="#">
                    <span class="material-icons-sharp">person_add</span>
                    <h3>Novo Usuário</h3>
                </a>
                <a href="#">
                    <span class="material-icons-sharp">forum</span>
                    <h3>Idiomas</h3>
                </a>
                <a href="#">
                    <span class="material-icons-sharp">manage_accounts</span>
                    <h3>Meu Perfil</h3>
                </a>
                <a href="#">
                    <span class="material-icons-sharp">logout</span>
                    <h3>Logout</h3>
                </a>
            </div>
        </aside>
        <!-- End of Side Menu -->

        <!-- Main Content -->
        <main>
            <h1>Dashboard</h1>
            <div class="insights">
                <!-- Card Students -->
                <div class="sales">
                    <span class="material-icons-sharp">group</span>
                    <div class="middle">
                        <div class="left">
                            <h3>Total de Estudantes</h3>
                            <h1>200</h1>
                        </div>
                    </div>
                </div>
                <!-- End of Students -->

                <!-- Card Teachers -->
                <div class="expenses">
                    <span class="material-icons-sharp">school</span>
                    <div class="middle">
                        <div class="left">
                            <h3>Total de Professores</h3>
                            <h1>30</h1>
                        </div>
                    </div>
                </div>
                <!-- End of Card Teachers -->
            </div>

            <!-- Table Recent Order -->
            <div class="recent-orders">
                <h2>Usuários</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Sobrenome</th>
                            <th>Telefone</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @users.each do |user| %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.first_name %></td>
                                <td><%= user.last_name %></td>
                                <td><%= user.phone_number %></td>
                                <td><%= user.email %></td>
                                <td><%= user.profile_name %></td>
                                <td>Ativo</td>
                                <td><span class="material-icons-sharp">edit</span>Editar</td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </main>
        <!-- End of Main Section -->
    </section>

    <!-- Footer -->
    <footer>
        <div>
            <img src="https://aliancacultural.com/wp-content/uploads/2020/08/ALIANCA-CULTURAL-LOGO-152x152-1.png" />
        </div>
        <div>
            <h3>Atendimento</h3>
            <p><a href="https://api.whatsapp.com/send?phone=5521969799697"><span class="material-icons-sharp">phone_iphone</span> +55 21 96979 9697</a></p>
            <p><a href="mailto:corporate@aliancacultural.com"><span class="material-icons-sharp">mail</span> corporate@aliancacultural.com</a></p>
            <p><span class="material-icons-sharp">alarm_on</span> Segunda a Sexta: 8h às 21h</p>
            <p><span class="material-icons-sharp">alarm_on</span> Sábados: 8h às 16h</p>
        </div>
        <div>
            <h3>Conecte-se</h3>
            <p><a href="https://api.whatsapp.com/send?phone=5521969799697"><span class="material-icons-sharp">phone_iphone</span></a></p>
        </div>       
    </footer>
    <!-- End of Footer -->
    <script src="/javascripts/dashboard-index.js"></script>
</body>
</html>